
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        <div class="form-group">
            <label for="username">Nom d'utilisateur:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required autofocus>
        </div>

        <div class="form-group">
            <label for="password">Mot de passe:</label>
            <input type="password" id="password" name="_password" class="form-control" required>
        </div>

        {#
            If you want to control the URL the user is redirected to on success (more details below),
            set the input field URI value to the store target path and uncomment this.
        #}
        {# <input type="hidden" name="_target_path" value="{{ app.request.uri }}"> #}

        <button type="submit" class="btn btn-primary">Connexion</button>
    </form>
{% endblock %}
